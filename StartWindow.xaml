<Window x:Class="Lesson1.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson1"
        mc:Ignorable="d"
        Title="StartWindow" Height="450" Width="400">
    <StackPanel Orientation="Vertical">
        <Label HorizontalAlignment="Center" FontSize="24">ADO.NET</Label>
        <Button x:Name="basicButton" HorizontalContentAlignment="Left" Margin="20 10" Padding="20 5" Click="basicButton_Click">1. Основы технологии</Button>
        <Button x:Name="ormButton" HorizontalContentAlignment="Left" Margin="20 10" Padding="20 5" Click="ormButton_Click">2. ORM</Button>
        <Button x:Name="dalButton" HorizontalContentAlignment="Left" Margin="20 10" Padding="20 5" Click="dalButton_Click">3. DAL</Button>
    </StackPanel>
</Window>
